<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="@color/color_all_back"
              tools:context=".LoginActivity"
              android:orientation="vertical">
    <include layout="@layout/action_bar" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/padding_40"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:src="@mipmap/company"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_marginTop="@dimen/margin_5"
                android:padding="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_user"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/input_back"/>

            <EditText
                android:id="@+id/password"
                android:padding="@dimen/padding_10"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/input_back"/>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:gravity="right|top"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_color_gray"
                android:text="@string/forget_password"/>

            <Button
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_back"
                android:textColor="@color/button_text_color"
                android:text="@string/action_sign_in"/>

            <Button
                android:id="@+id/top_regist_user"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_back"
                android:textColor="@color/button_text_color"
                android:text="@string/action_new_user"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/padding_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/padding_20"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginRight="@dimen/padding_20"
                    android:visibility="gone"
                    android:background="@color/seperate_line_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:text="@string/seperate_text"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:background="@color/color_all_back"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:textColor="@color/seperate_line_color"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:paddingLeft="@dimen/padding_40"
                android:paddingRight="@dimen/padding_40"
                >
                <ImageButton
                    android:id="@+id/top_baidu_button"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_30"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:visibility="gone"
                    android:src="@drawable/button_baidu"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:background="@null"/>
                <ImageButton
                    android:id="@+id/top_wechat_button"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="@dimen/padding_30"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:visibility="gone"
                    android:src="@drawable/button_weixin"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:background="@null"/>
                <ImageButton
                    android:id="@+id/top_weibo_button"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginRight="@dimen/padding_30"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:src="@drawable/button_weibo"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:background="@null"/>
                <ImageButton
                    android:id="@+id/top_facebook_button"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:visibility="gone"
                    android:src="@drawable/button_facebook"/>
            </LinearLayout>
        <TextView
            android:id="@+id/version"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_20"
            android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

