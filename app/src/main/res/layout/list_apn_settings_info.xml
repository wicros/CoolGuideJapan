<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#6B8E23"/>

    <LinearLayout
        android:id="@+id/apn_settings_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         android:gravity="center_vertical"
        android:orientation="horizontal"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"  >

        <TextView
            android:id="@+id/apn_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:text="@string/apn_name_demo"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/apn_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="@string/apn_name_demo_1"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#6B8E23"
        />

    <LinearLayout
        android:id="@+id/apn_settings_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/apn_style"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/apn_style" />

        <TextView
            android:id="@+id/apn_style_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="@string/apn_style_1"
            android:gravity="center_horizontal"
            android:textColor="#CCE8CF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/apn_copy_1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/apn_copy"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#6B8E23"
        />

    <LinearLayout
        android:id="@+id/apn_settings_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/apn_user_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/apn_user_name" />

        <TextView
            android:id="@+id/apn_user_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="@string/apn_user_name_1"
            android:gravity="center_horizontal"
            android:textColor="#CCE8CF"
            android:textSize="15sp" />


        <Button
            android:id="@+id/apn_copy_2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/apn_copy"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#6B8E23"
        />

    <LinearLayout
        android:id="@+id/apn_settings_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/apn_user_password"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/apn_user_password" />

        <TextView
            android:id="@+id/apn_user_password_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="@string/apn_user_password_1"
            android:gravity="center_horizontal"
            android:textColor="#CCE8CF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/apn_copy_3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/apn_copy"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#6B8E23"/>

    <LinearLayout
        android:id="@+id/apn_settings_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/apn_user_pIdentity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/apn_user_Identity"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/apn_user_Identity_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/apn_user_Identity_1"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#6B8E23"/>

</LinearLayout>