<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/color_all_back"
             >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99ad181f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/action_back_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/all_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/all"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/fav_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/fav"
            android:textColor="@color/color_white"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <me.maxwin.view.XListView
            android:id="@+id/sim_regist_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="2dp"
            android:divider="@color/color_white"
            android:listSelector="@color/transparent"
            android:cacheColorHint="@color/transparent"
            />

        <TextView
            android:id="@+id/default_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/coupon_default_text"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:background="@color/color_white"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:visibility="gone">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>






</LinearLayout>

