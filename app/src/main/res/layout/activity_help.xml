<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_all_back"
  >
    <include layout="@layout/action_bar" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    android:layout_margin="15dp"
    android:text="FAQ"
    />

        <Button
            android:id="@+id/help_list_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_apn_bar_height"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="@string/chinese"
            android:background="@drawable/shape"
            android:textColor="@color/color_white"
            android:drawableRight="@mipmap/arrow_right"
            android:textSize="14sp" />

        <Button
            android:id="@+id/help_list_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_apn_bar_height"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="@string/english"
            android:background="@drawable/shape"
            android:textColor="@color/color_white"
            android:drawableRight="@mipmap/arrow_right"
            android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_margin="15dp"
        android:text="@string/help_Contact"
        />

        <Button
            android:id="@+id/help_list_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_apn_bar_height"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="@string/chinese"
            android:background="@drawable/shape"
            android:textColor="@color/color_white"
            android:drawableRight="@mipmap/arrow_right"
            android:textSize="14sp" />

        <Button
            android:id="@+id/help_list_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_apn_bar_height"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="@string/english"
            android:background="@drawable/shape"
            android:textColor="@color/color_white"
            android:drawableRight="@mipmap/arrow_right"
            android:textSize="14sp" />

</LinearLayout>

